<UserControl x:Class="MapleBuffHelper.Controls.SkillManageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MapleBuffHelper.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{StaticResource WzViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <!-- Skill Search -->
        <local:SkillListControl Grid.Column="0"/>
        
        <!-- Skill Info -->
        <Grid Grid.Column="1">
            <DockPanel VerticalAlignment="Center">
                <Image Width="30" Height="30"
                       Source="{Binding SelectedSkill.ImgBitmapSource}"/>
                <StackPanel>
                    <TextBlock Text="{Binding SelectedSkill.SkillName}"/>
                </StackPanel>
            </DockPanel>
        </Grid>
        
        <!-- Selected Skill List -->
        <local:SkillListControl Grid.Column="2" DataContext="{StaticResource SkillViewModel}"/>
    </Grid>
</UserControl>
